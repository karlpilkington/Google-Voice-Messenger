<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp" >

    <QuickContactBadge
        android:id="@+id/thread_contact_badge"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/thread_contact_firstname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thread_contact_badge"
        android:layout_toRightOf="@+id/thread_contact_badge"
        android:text="Kayla"
        android:layout_marginLeft="4dp"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/thread_contact_lastname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/thread_contact_firstname"
        android:layout_alignBottom="@id/thread_contact_firstname"
        android:layout_toRightOf="@id/thread_contact_firstname"
        android:text="Kazanjian"
        android:layout_marginLeft="4dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/thread_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/thread_contact_badge"
        android:layout_alignLeft="@+id/thread_contact_firstname"
        android:layout_alignRight="@+id/thread_timestamp"
        android:layout_below="@+id/thread_contact_firstname"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:text="I love you too, Oppa &lt;3"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/thread_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/thread_contact_lastname"
        android:layout_marginRight="4dp"
        android:text="Yesterday"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>